<h1>Burgers that need to be devoured!</h1>

<ul>
  {{#each burger}}
    {{#unless devoured}}
      {{> cats/cat-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>

<h1>Devoured burgers: </h1>

<ul>
  {{#each cats}}
    {{#if sleepy}}
      {{> cats/cat-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Cat</h2>




<form class="create-form">

    <div class="form-group">
        <label for="ca">Burgers Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <input type="text" name="textbox" placeholder="Enter burger here">
    </div>

    <button type="submit">Add Burger</button>
</form>
